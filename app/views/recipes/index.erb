<h1>All Recipes</h1>
<ul>
  <% @all_recipes.each do |recipe| %>
      <li>
        <b><%= recipe.name %></b> | <a href="/recipes/<%= recipe.id %>" title="Show">Show</a> |
        <a href="/recipes/<%= recipe.id %>/edit" title="Edit">Edit</a> |
        <form action="/recipes/<%= recipe.id %>/delete" method="post">
          <input id="hidden" type="hidden" name="_method" value="delete">
          <input type="submit" value="Delete" class="delete" style="display: inline-block !important">
        </form>
        <br>
        Ingredients: <%= recipe.ingredients %><br>
        Cook Time: <%= recipe.cook_time %><br><br>
      </li>
  <% end %>
</ul>

<br>

<a href="/recipes/new">New recipe</a>